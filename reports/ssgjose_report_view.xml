<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
    <template id="hiring_company_report_template">
      <t t-call="web.html_container">
        <head>
          <style>
            .table1 {
            border-bottom: 1px solid #000000;
            border-top: 1px solid #000000;
            border-spacing: 0px;
            margin-left: auto;
            margin-right: auto;
            align: center;
            }
            .table1 tbody tr:nth-of-type(odd) {
            background-color: #d6dbdf;
            }
            .table2 {
            width: 100%;
            border-bottom: 1px solid #000000;
            align: center;
            }
            .tr2 {
            border-bottom: 1px solid #000000;
            }
          </style>
        </head>
        <div class="page">
          <br />
          <t t-foreach='docs' t-as='o'>
            <table class="table2">
              <tr>

              </tr>
              <tr>
                <td colspan="5" align="left">
                  <b>
                    <span t-field="o.name" />
                  </b>
                </td>
              </tr>
            </table>
            <br />

            
            <table class="table1">
              <thead>
                <tr class="tr2">
                  <td width="300" align="center">
                    <font size="5">
                      <b>Company Name</b>
                    </font>
                  </td>
                  <td width="300" align="center">
                    <font size="5">
                      <b>Email</b>
                    </font>
                  </td>
                  <td width="300" align="center">
                    <font size="5">
                      <b>Phone</b>
                    </font>
                  </td>
                  <td width="300" align="center">
                    <font size="5">
                      <b>Employees</b>
                    </font>
                  </td>
                  <td width="300" align="center">
                    <font size="5">
                      <b>Company size</b>
                    </font>
                  </td>
                </tr>
              </thead>
              <tbody>
                <tr class="tr1" align="center">
                  <td class="td1" width="300">
                    <span t-esc="o.name" />
                  </td>
                  <td class="td1" width="300" align="center">
                    <span t-esc="o.email" />
                  </td>
                  <td class="td1" width="300" align="center">
                    <span t-esc="o.phone" />
                  </td>
                  <td class="td1" width="300" align="center">
                    <span t-esc="o.employees" />
                  </td>
                  <td class="td1" width="300" align="center">
                    <span t-esc="o.company_size" />
                  </td>
                </tr>
              </tbody>
              <br />
            </table>
          </t>
        </div>
      </t>
    </template>
  </data>
</odoo> 
                   